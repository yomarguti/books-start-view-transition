---
export interface Props {
  title: string;
  img: string;
  id: string;
  author: string;
  review: string;
}

const { title, img, id } = Astro.props;
---

<a 
class="hover:scale-105 hover:contrast-125 hover:shadow-2xl inline-block transition-all"
href={`/${id}`}>
<img
  class="aspect-[389/500] h-full object-cover w-full max-w-full rounded"
  src={img}
  alt=`Porta del libro ${title}`
  style=`view-transition-name: book-${id};`
/>
</a>